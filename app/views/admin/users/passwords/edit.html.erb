<h1>Reset <%= format_email @user %> Password</h1>
<br />
<%= form_for @user, url: admin_user_password_path do |f| %>

  <%= render partial: '/admin/users/errors', locals: { user: @user } %>
  <%= render partial: '/admin/users/password_fields', locals: { f: f } %>
  <br />
  <div class='actions'>
    <%= f.submit 'Done', class: 'btn btn-success', data: { confirm: 'Reset this User\'s password?' } %>
    <%= link_to 'Cancel', admin_users_path, class: 'btn btn-link' %>
  </div>

<% end %>
