<h1>Users</h1>
<table class='table table-hover'>
  <tr>
    <th>Email</th>
    <th>Admin?</th>
    <th>Edit User</th>
    <th>Reset User Password</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %> </td>
      <td><%= user.admin ? 'Yes' : 'No' %> </td>
      <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-link btn-xs' %> </td>
      <td><%= link_to 'Reset Password', reset_password_admin_user_path(user), class: 'btn btn-link btn-xs' %> </td>
    </tr>
  <% end %>
</table>

<div>
  <%= link_to 'Create New User', new_admin_user_path, class: 'btn btn-primary' %>
</div>
