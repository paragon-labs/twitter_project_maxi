<h1>Users</h1>
<table class='table table-hover'>
  <tr>
    <th align='left'>Email</th>
    <th align='left'>Admin?</th>
      <% if admin_role? %>
        <th align='left'>Edit</th>
      <% end %>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %> </td>
      <td><%= user.admin ? 'Yes' : 'No' %> </td>
      <% if admin_role? %>
        <td><%= link_to 'Edit User', edit_admin_user_path(user), class: 'btn btn-link btn-xs' %> </td>
      <% end %>
    </tr>
  <% end %>
</table>

<div>
  <% if admin_role? %>
    <%= link_to 'Create New User', new_admin_user_path, class: 'btn btn-primary' %>
  <% end %>
</div>
